<% collection.each do |comment| %>
  <% break if comment.body.nil? && current_user %>
  <div class="well">
    <span><strong><%= "#{comment.user.first_name} #{comment.user.last_name}" %></strong><time> <%= comment.created_at.strftime('%m-%d-%Y, at %l:%M%P') %> </time></span>
    <p><%= comment.body %></p>
    <%= link_to 'Edit', edit_comment_path(comment) if user_owner_of?(comment) %>
    <%= link_to 'Reply', new_comment_comment_path(comment) if current_user %>
    <%= link_to 'Delete comment', [comment.post, comment], method: :delete if user_owner_of?(comment) %>
    <ul>
      <% unless comment.comments.empty? %>
        <%= render 'comments/comments', :collection => comment.comments %>
      <% end %>
    </ul>
  </div>
<% end %>
