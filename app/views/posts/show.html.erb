<h4><%= @post.title %></h4>
<div><%= @post.body %></div>
<br>
<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-default' %>
<%= link_to 'Delete', post_path(@post), method: :delete, class: 'btn btn-default', data: {confirm: 'Are you sure?'} %>
<br>
<h5>Add a comment</h5>
<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <%= f.input :commenter, placeholder: 'Name', label: false %>
  <%= f.input :body, placeholder: 'Leave a comment...', label: false %>
  <%= f.button :submit, value: 'Send comment' %>
<% end %>
<br>
<% unless @post.comments[0].body.nil? %>
  <h5>Comments</h5>
  <% @post.comments.each do |comment| %>
    <% break if @post.comments.last == comment %>
    <div class="well">
      <strong><%= comment.commenter %></strong>
      <p><%= comment.body %></p>
      <%= link_to 'Delete comment', [comment.post, comment], method: :delete, :confirm => 'Are you sure?' %>
    </div>
  <% end %>
<% end %>